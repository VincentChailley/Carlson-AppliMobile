<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:layout_marginTop="45dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_nouveau" tools:context="com.chailley.vincent.groot.Nouveau">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vous pouvez indiquer un nom au compte, les participants, et choisir une devise par défault, puis cliquez sur continuer pour entrer les dépenses"
                android:id="@+id/textView6"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.03" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom :"
                android:background="@color/perso"
                android:textSize="20dp"
                android:padding="10dp"
                android:id="@+id/textView"
                android:layout_weight="0.03" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:paddingLeft="5dp"
                android:layout_weight="0.03" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contributeurs au comptes :"
                android:textSize="20dp"
                android:padding="10dp"
                android:background="@color/perso"
                android:id="@+id/textView4"
                android:layout_weight="0.03" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:paddingLeft="5dp"
                android:layout_weight="0.03" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+"
                android:padding="10dp"
                android:background="@color/perso2"
                android:textSize="20dp"
                android:textColor="@color/blanc"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:enabled="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Devise :"
                android:textSize="20dp"
                android:padding="10dp"
                android:background="@color/perso"
                android:id="@+id/textView5"
                android:layout_weight="0.03" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="0.03" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continuer"
                android:textSize="20dp"
                android:textColor="@color/blanc"
                android:padding="10dp"
                android:background="@color/perso3"
                android:id="@+id/button4"
                android:layout_gravity="center_horizontal"
                android:enabled="false" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>